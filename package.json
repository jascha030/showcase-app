{
	"name": "showcase",
	"version": "0.0.1",
	"private": true,
	"main": "src/electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "electron src/electron.cjs",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"build:svelte": "svelte-kit build",
		"build:electron": "electron-builder -mwl --config build.config.json",
		"start": "svelte-kit start"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"electron-context-menu": "^2.5.2",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.3.0",
		"electron-window-state": "^5.0.3",
		"marked": "^4.3.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.6",
		"@sveltejs/kit": "next",
		"@tailwindcss/typography": "^0.5.13",
		"@types/electron-window-state": "^2.0.34",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"autoprefixer": "^10.4.19",
		"concurrently": "^6.5.1",
		"cross-env": "^7.0.3",
		"dotenv": "^8.6.0",
		"electron": "^12.2.3",
		"electron-builder": "^22.14.13",
		"electron-connect": "^0.6.3",
		"electron-packager": "^15.5.2",
		"electron-updater": "^4.6.5",
		"eslint": "^7.32.0",
		"eslint-plugin-svelte": "^1.1.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.39",
		"postcss-load-config": "^3.1.4",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.77.7",
		"svelte": "^3.59.2",
		"svelte-check": "^1.6.0",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.4.4",
		"typescript": "^4.9.5",
		"vite": "^2.9.18"
	}
}
